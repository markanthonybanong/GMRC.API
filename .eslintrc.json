{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "mongo": true,
        "node": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "linebreak-style": "off",
        "no-underscore-dangle": "off",
        "quotes": ["error", "single"],
        "semi": ["error", "always"]
    }
}